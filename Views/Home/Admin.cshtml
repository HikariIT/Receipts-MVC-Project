@using MVCProject.Models.Views
@model AdminViewModel

<div>
    <h1>Welcome, Admin!</h1>
    <hr/>
    <h2>Users</h2>
    <table class="table">
        <thead>
        <tr>
            <th>ID</th>
            <th>Username</th>
            <th>Actions</th>
        </tr>
        </thead>
        <tbody>
        @foreach (var user in Model.Users)
        {
            <tr>
                <td>@user.user_id</td>
                <td>@user.username</td>
                <td>
                    <a href=@("DeleteUser/" + user.user_id)>Delete user</a>
                </td>
            </tr>
        }
        </tbody>
    </table>
</div>